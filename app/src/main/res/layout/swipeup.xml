<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomNavigation.PairingFragment.PairingFragment"
    android:background="@drawable/backgroundtest">


    <ImageView
        android:id="@+id/arrow_image1"
        android:layout_width="134dp"
        android:layout_height="140dp"
        android:layout_marginTop="320dp"
        app:srcCompat="@drawable/ic_actrion_swipeup"
        android:tint="@color/AtChatYellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/arrow_image2"
        android:layout_width="134dp"
        android:layout_height="140dp"
        android:layout_marginTop="350dp"
        app:srcCompat="@drawable/ic_actrion_swipeup"
        android:tint="@color/AtChatYellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/arrow_image3"
        android:layout_width="134dp"
        android:layout_height="140dp"
        android:layout_marginTop="380dp"
        app:srcCompat="@drawable/ic_actrion_swipeup"
        android:tint="@color/AtChatYellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/wait_message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finding partner...."
        android:textSize="20sp"
        android:textColor="@color/AtChatYellow"
        android:layout_marginBottom= "30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancel_queue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/AtChatYellow"
        android:layout_marginTop="400dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />

</android.support.constraint.ConstraintLayout>
