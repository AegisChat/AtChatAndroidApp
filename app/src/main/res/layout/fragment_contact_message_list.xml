<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="atchat.aegis.com.myapplication.ContactMessageListFragment.ContactMessageListFragment">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:layout_marginStart="8dp" />
    <TextView
        android:id="@+id/contact_profile_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a the persons name/alias"
        android:textColor="@color/AtChatYellow"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toRightOf="@+id/profile_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="6dp" />
    <TextView
        android:id="@+id/contact_messge_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the most recent text that was sent"
        android:textColor="@color/AtChatYellow"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:maxWidth="350dp"
        android:maxHeight="16dp"
        app:layout_constraintLeft_toRightOf="@+id/profile_image"
        app:layout_constraintTop_toBottomOf="@+id/contact_profile_message"
        android:layout_marginStart="8dp" />

</android.support.constraint.ConstraintLayout>
